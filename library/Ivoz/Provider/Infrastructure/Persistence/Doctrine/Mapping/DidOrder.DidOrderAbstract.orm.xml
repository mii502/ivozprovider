<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <mapped-superclass name="Ivoz\Provider\Domain\Model\DidOrder\DidOrderAbstract" table="did_order_abstract">
    <field name="status" type="string" column="status" length="30" nullable="false">
      <options>
        <option name="default">pending_approval</option>
        <option name="comment">[enum:pending_approval|approved|rejected|expired]</option>
      </options>
    </field>
    <field name="requestedAt" type="datetime" column="requestedAt" nullable="false"/>
    <field name="approvedAt" type="datetime" column="approvedAt" nullable="true"/>
    <field name="rejectedAt" type="datetime" column="rejectedAt" nullable="true"/>
    <field name="rejectionReason" type="text" column="rejectionReason" nullable="true"/>
    <field name="setupFee" type="decimal" column="setupFee" precision="10" scale="4" nullable="false">
      <options>
        <option name="default">0.0000</option>
      </options>
    </field>
    <field name="monthlyFee" type="decimal" column="monthlyFee" precision="10" scale="4" nullable="false">
      <options>
        <option name="default">0.0000</option>
      </options>
    </field>
    <many-to-one field="company" target-entity="Ivoz\Provider\Domain\Model\Company\CompanyInterface" fetch="LAZY">
      <join-columns>
        <join-column name="companyId" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="ddi" target-entity="Ivoz\Provider\Domain\Model\Ddi\DdiInterface" fetch="LAZY">
      <join-columns>
        <join-column name="ddiId" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="approvedBy" target-entity="Ivoz\Provider\Domain\Model\Administrator\AdministratorInterface" fetch="LAZY">
      <join-columns>
        <join-column name="approvedById" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
      </join-columns>
    </many-to-one>
  </mapped-superclass>
</doctrine-mapping>
