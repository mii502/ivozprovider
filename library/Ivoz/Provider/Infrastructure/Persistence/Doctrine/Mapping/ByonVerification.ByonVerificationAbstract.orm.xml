<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <mapped-superclass name="Ivoz\Provider\Domain\Model\ByonVerification\ByonVerificationAbstract" table="byon_verification_abstract">
    <indexes>
      <index name="byon_company_id" columns="companyId"/>
      <index name="byon_phone_number" columns="phoneNumber"/>
      <index name="byon_status" columns="status"/>
    </indexes>
    <field name="phoneNumber" type="string" column="phoneNumber" length="25" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">E.164 format phone number</option>
      </options>
    </field>
    <field name="verificationSid" type="string" column="verificationSid" length="64" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Somleng verification SID</option>
      </options>
    </field>
    <field name="status" type="string" column="status" length="20" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">[enum:pending|approved|expired|failed]</option>
        <option name="default">pending</option>
      </options>
    </field>
    <field name="attempts" type="integer" column="attempts" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="default">0</option>
        <option name="comment">OTP check attempts</option>
      </options>
    </field>
    <field name="createdAt" type="datetime" column="createdAt" nullable="false">
      <options>
        <option name="comment">Verification created timestamp</option>
      </options>
    </field>
    <field name="verifiedAt" type="datetime" column="verifiedAt" nullable="true">
      <options>
        <option name="comment">When verification was approved</option>
      </options>
    </field>
    <field name="expiresAt" type="datetime" column="expiresAt" nullable="false">
      <options>
        <option name="comment">Verification expiration timestamp</option>
      </options>
    </field>
    <many-to-one field="company" target-entity="Ivoz\Provider\Domain\Model\Company\CompanyInterface" fetch="LAZY">
      <join-columns>
        <join-column name="companyId" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
      </join-columns>
    </many-to-one>
  </mapped-superclass>
</doctrine-mapping>
